//algoritmo sumar dos numeros prg1
#include <stdio.h>
int main()
{
    int num1,num2,num3;
    printf("\nIngrese primer numero: ");
    scanf("%d",&num1);
    while(num1<0){
        printf("\nError, Ingrese numero positivo: ");
        scanf("%d",&num1);
    }
    printf("\nIngrese segundo numero: ");
    scanf("%d",&num2);
    while(num2<0){
        printf("\nError, Ingrese numero positivo: ");
        scanf("%d",&num2);
    }
    num3=num1+num2;
    printf("\nLa suma de %d+%d es: %d",num1,num2,num3);
    return 0;
}
